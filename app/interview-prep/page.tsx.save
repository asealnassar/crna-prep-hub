'use client'

import { useState } from 'react'
import Link from 'next/link'
import { createClient } from '@/lib/supabase-browser'

export default function InterviewPrep() {
  const [email, setEmail] = useState('')
  const [submitting, setSubmitting] = useState(false)
  const [submitted, setSubmitted] = useState(false)
  const [error, setError] = useState('')
  const supabase = createClient()

  const handleSubmit = async (e: React.FormEvent) => {
    e.preventDefault()
    if (!email.trim()) return
    setSubmitting(true)
    setError('')

    const { error: dbError } = await supabase.from('interview_prep_waitlist').insert({ email: email.toLowerCase().trim() })

    if (dbError) {
      if (dbError.code === '23505') {
        setError('You\'re already on the list!')
      } else {
        setError('Something went wrong. Please try again.')
      }
    } else {
      setSubmitted(true)
    }
    setSubmitting(false)
  }

  return (
    <div className="min-h-screen bg-gradient-to-br from-indigo-900 via-purple-900 to-indigo-800">
      <nav className="bg-white/10 backdrop-blur-md border-b border-white/10">
        <div className="max-w-7xl mx-auto px-4 py-4">
          <div className="flex justify-between items-center">
            <Link href="/"><h1 className="text-2xl font-bold text-white">CRNA Prep Hub</h1></Link>
            <div className="flex gap-6">
              <Link href="/schools" className="text-white/80 hover:text-white transition">Schools</Link>
              <Link href="/interview" className="text-white/80 hover:text-white transition">Mock Interview</Link>
              <Link href="/pricing" className="text-white/80 hover:text-white transition">Pricing</Link>
              <Link href="/sponsors" className="text-white/80 hover:text-white transition">Sponsors</Link>
            </div>
          </div>
        </div>
      </nav>

      <div className="max-w-4xl mx-auto px-4 py-16">
        <div className="text-center mb-12">
          <div className="inline-block px-4 py-2 bg-yellow-500/20 border border-yellow-500/50 rounded-full text-yellow-300 text-sm font-semibold mb-6">
            üöÄ LAUNCHING MARCH 1ST
          </div>
          <h1 className="text-5xl font-bold text-white mb-6">School-Specific Interview Prep</h1>
          <p className="text-xl text-indigo-200 max-w-2xl mx-auto">
            Get the inside scoop on exactly what to expect at your CRNA program interview.
          </p>
        </div>

        <div className="bg-white/10 backdrop-blur-md rounded-2xl p-8 mb-12">
          <h2 className="text-2xl font-bold text-white mb-6 text-center">What's Coming</h2>
          <div className="grid md:grid-cols-2 gap-6">
            <div className="bg-white/10 rounded-xl p-5">
              <div className="text-3xl mb-3">üéØ</div>
              <h3 className="text-lg font-bold text-white mb-2">Interview Style by Program</h3>
              <p className="text-indigo-200 text-sm">Know if it's traditional, MMI, panel, or group interview before you walk in.</p>
            </div>
            <div className="bg-white/10 rounded-xl p-5">
              <div className="text-3xl mb-3">üìù</div>
              <h3 className="text-lg font-bold text-white mb-2">Real Questions Asked</h3>
              <p className="text-indigo-200 text-sm">Actual questions reported by students who interviewed at each program.</p>
            </div>
            <div className="bg-white/10 rounded-xl p-5">
              <div className="text-3xl mb-3">üéì</div>
              <h3 className="text-lg font-bold text-white mb-2">Current Student Insights</h3>
              <p className="text-indigo-200 text-sm">Tips and advice directly from students currently in the program.</p>
            </div>
            <div className="bg-white/10 rounded-xl p-5">
              <div className="text-3xl mb-3">üëî</div>
              <h3 className="text-lg font-bold text-white mb-2">Program Director Info</h3>
              <p className="text-indigo-200 text-sm">Know who you'll be meeting and what they look for in candidates.</p>
            </div>
          </div>
        </div>

        <div className="bg-white rounded-2xl shadow-xl p-8 max-w-lg mx-auto">
          {submitted ? (
            <div className="text-center py-4">
              <div className="text-5xl mb-4">üéâ</div>
              <h3 className="text-2xl font-bold text-gray-800 mb-2">You're on the list!</h3>
              <p className="text-gray-600">We'll notify you as soon as we launch on March 1st.</p>
            </div>
          ) : (
            <>
              <h3 className="text-2xl font-bold text-gray-800 mb-2 text-center">Get Early Access</h3>
              <p className="text-gray-600 mb-6 text-center">Be the first to know when we launch. No spam, just one email.</p>
              <form onSubmit={handleSubmit} className="space-y-4">
                <input
                  type="email"
                  value={email}
                  onChange={(e) => setEmail(e.target.value)}
                  placeholder="Enter your email"
                  required
                  className="w-full px-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-purple-500"
                />
                {error && <p className="text-red-500 text-sm">{error}</p>}
                <button
                  type="submit"
                  disabled={submitting}
                  className="w-full py-3 bg-gradient-to-r from-purple-600 to-pink-500 text-white font-semibold rounded-xl hover:opacity-90 transition disabled:opacity-50"
                >
                  {submitting ? 'Joining...' : 'Notify Me'}
                </button>
              </form>
            </>
          )}
        </div>

        <div className="text-center mt-12">
          <p className="text-indigo-300">
            In the meantime, practice with our{' '}
            <Link href="/interview" className="text-white underline hover:text-pink-300 transition">AI Mock Interview</Link>
          </p>
        </div>
      </div>
    </div>
  )

